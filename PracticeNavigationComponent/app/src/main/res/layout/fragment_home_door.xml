<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeDoorFragment">

    <TextView
            android:text="Door TO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvToShow" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:layout_marginTop="180dp" app:layout_constraintBottom_toTopOf="@+id/btnGoToHome"/>
    <Button
            android:text="Go To Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGoToHome" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tvToShow" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.272"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"/>
</android.support.constraint.ConstraintLayout>