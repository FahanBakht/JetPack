<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="myModel" type="com.example.muhammadfarhan.jetpackdatabinding.model.MyModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context=".ui.main.MainFragment" >

        <Button
                android:text="@string/insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnInsert"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/etEnterText"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etEnterText"
                app:layout_constraintTop_toBottomOf="@+id/tvTextToShow"
                app:layout_constraintBottom_toTopOf="@+id/btnInsert" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:hint="@string/enter_text"/>

        <!--android:text="@{myObject.value,default=@string/text_to_show}"-->

        <TextView
                android:text="@{myModel.value}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTextToShow" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/etEnterText" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp"/>

        <android.support.design.widget.FloatingActionButton
                android:src="@drawable/ic_navigate_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/fabNext" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="18dp" android:layout_marginBottom="18dp"
                app:layout_constraintEnd_toEndOf="parent" app:backgroundTint="@android:color/holo_purple"/>

    </android.support.constraint.ConstraintLayout>

</layout>
